# Application Configuration
NODE_ENV=development
APP_NAME=AI Voice Assistant & Calendar Manager
APP_VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/voice_assistant
POSTGRES_DB=voice_assistant
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=7d

# API Keys
OPENAI_API_KEY=your-openai-api-key-here
GOOGLE_CALENDAR_API_KEY=your-google-calendar-api-key-here

# Security
SECRET_KEY=your-super-secret-key-here
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance
MAX_CONNECTIONS=100
WORKER_PROCESSES=4
